<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>REG</h1>

    <form action="/users/reg" method="POST">

        <ul>
            <% if(typeof errors != 'undefined'){ %>
                <% errors.forEach(error=> { %>
                    <li style= "list-style-type: none"> <%= error.message %> </li>
                <%}) %>
            <% } %>
        </ul>
        <div>
            <input type="text" name="login" id="login" placeholder="yourLogin" required>
        </div>

        <div>
            <input type="tel" name="Pnumber" id="Pnumber" placeholder="7 123 456 78 90" required>
        </div>

        <div>
            <input type="password" name="password" id="password" placeholder="password" required>
        </div>
        <div>
            <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="confirm your password here" required>
        </div>
        
        <div>
            <input type="submit" value="Reg">
        </div>
        <a href="/users/login"> Alredy registered? log in </a>
    </form>
</body>
</html>